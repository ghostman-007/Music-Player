<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar_bnb"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:progressTint="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSongName_bnb"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="7"
            android:text="CURRENT SONG NAME"
            android:gravity="center_vertical|start"
            android:paddingStart="10dp"
            android:fontFamily="serif"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:ellipsize="marquee" />

        <ImageButton
            android:id="@+id/ibPlay_bnb"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:padding="8dp"
            android:layout_weight="1.5"
            android:contentDescription="PLAY"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_play_arrow_24px" />

        <ImageButton
            android:id="@+id/ibPause_bnb"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:padding="8dp"
            android:layout_weight="1.5"
            android:contentDescription="PAUSE"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_pause_24px"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ibNext_bnb"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:padding="8dp"
            android:layout_weight="1.5"
            android:contentDescription="NEXT BUTTON"
            android:scaleType="fitCenter"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_skip_next_24px" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>